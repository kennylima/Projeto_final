<h2>Olá, {{associado.nome}}</h2>
<hr>
<h4>Seus dados</h4>
<p>Nome: {{associado.nome}}</p>
<p>E-mail: {{associado.email}}</p>
<p>Telefone: {{associado.telefone}}</p>
<p>Matrícula da empresa: {{associado.matriculaEmpresa}}</p>
<p>CPF: {{associado.cpf}}</p>
<a class="w-100 btn btn-lg btn-primary" href="/perfil/edit/{{associado.id}}" type="submit">Editar dados</a>
<br><br>
<hr>
<h4>Dependentes</h4>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>
                <th scope="col">Parentesco</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each dependentes}}
            <tr>
                <td>{{this.nome}}</td>
                <td>{{this.telefone}}</td>
                <td>{{this.parentesco}}</td>
                <td><a href="/perfil/dependente/edit/{{this.id}}">Editar</a> | <a href="/perfil/dependente/delete/{{this.id}}">Excluir</a></td>
            </tr>
            {{/each}}
        </tbody> 
    </table>
</div>
<a class="w-100 btn btn-lg btn-primary" href="/perfil/dependente/{{associado.id}}" type="submit">Cadastrar dependente</a>
<hr>
<h4>Reservas</h4>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Churrasqueira</th>
                <th scope="col">Data</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            {{#each reservas}}
            <tr>
                <td>{{this.local}}</td>
                <td>{{this.data}}</td>
                <td><a href="/perfil/reservas/delete/{{this.id}}">Excluir</a></td>
            </tr>
            {{/each}}
        </tbody> 
    </table>
</div>
<a class="w-100 btn btn-lg btn-primary" href="/perfil/reservas/{{associado.id}}" type="submit">Reservar churrasqueira</a>
<hr>