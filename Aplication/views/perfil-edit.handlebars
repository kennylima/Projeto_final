<h2>Editar dados</h2>

<form action="/perfil/edit/save" method="post" class="d-flex flex-column">
    <input type="hidden" name="id" value="{{usuarios.id}}" class="form-control" />  
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Nome:</label>
        <div class="col-sm-10">
            <input type="text" name="nome" value="{{usuarios.nome}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">CPF:</label>
        <div class="col-sm-10">
            <input type="text" name="cpf" value="{{usuarios.cpf}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">E-mail:</label>
        <div class="col-sm-10">
            <input type="email" name="email" value="{{usuarios.email}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Senha:</label>
        <div class="col-sm-10">
            <input type="text" name="senha" value="{{usuarios.senha}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Telefone:</label>
        <div class="col-sm-10">
            <input type="text" name="telefone" value="{{associados.telefone}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Matricula da empresa:</label>
        <div class="col-sm-10">
            <input type="text" name="matriculaEmpresa" value="{{associados.matriculaEmpresa}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row align-self-end">
        <input type="submit" class="w-100 btn btn-lg btn-primary" value="Salvar Alteração">
    </div>
</form>