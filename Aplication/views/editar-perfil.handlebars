<h2>Editar dados</h2>

<form action="/perfil" method="post" class="d-flex flex-column">
    <input type="hidden" name="id_usuario" value="{{usuario.id_usuario}}" class="form-control" />  
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Nome:</label>
        <div class="col-sm-10">
            <input type="text" name="nome" value="{{usuario.nome_usuario}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">E-mail:</label>
        <div class="col-sm-10">
            <input type="email" name="email" value="{{usuario.endereco_usuario}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">CPF:</label>
        <div class="col-sm-10">
            <input type="text" name="cpf" value="{{usuario.email_usuario}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Telefone:</label>
        <div class="col-sm-10">
            <input type="text" name="telefone" value="{{usuario.data_nascimento_usuario}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Matricula da empresa:</label>
        <div class="col-sm-10">
            <input type="text" name="matriculaEmpresa" value="{{usuario.data_nascimento_usuario}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Senha:</label>
        <div class="col-sm-10">
            <input type="password" name="senha" value="{{usuario.data_nascimento_usuario}}" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row align-self-end">
        <input type="submit" class="w-100 btn btn-lg btn-primary" value="Salvar Alteração">
    </div>
</form>