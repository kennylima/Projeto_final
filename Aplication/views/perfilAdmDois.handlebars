<h2>Olá, {{administrador.nome}}</h2>
<a class="btn btn-primary btn-sm" href="/" type="submit">Sair</a>
<hr>
<h4>Pesquisar associado</h4>
<br>
    <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
        <input type="search" class="form-control form-control-light text-bg-light" placeholder="Digite o nome do associado" aria-label="Search">
        <br>
        <a class="w-100 btn btn-lg btn-primary" href="/pesquisar2" type="submit">Pesquisar</a>
    </form>
<hr>
<h4>Reservas</h4>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Churrasqueira</th>
                <th scope="col">Associado</th>
                <th scope="col">Data</th>
            </tr>
        </thead>
        <tbody>
            {{#each reservas}}
            <tr>
                <td>{{this.local}}</td>
                <td>{{this.[Associado.nome]}}</td>
                <td>{{this.data}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<hr>
<h4>Novos usuários</h4>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">E-mail</th>
                <th scope="col">Telefone</th>
                <th scope="col">Matrícula empresa</th>
                <th scope="col">Status</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each associados}}
            <tr>
                <td>{{this.nome}}</td>
                <td>{{this.cpf}}</td>
                <td>{{this.email}}</td>
                <td>{{this.telefone}}</td>
                <td>{{this.matriculaEmpresa}}</td>
                <td>{{#if this.status}} Ativo {{else}} Inativo {{/if}}</td>
                <td>
                <form action="/perfil/administrador/aprovar/{{this.id}}" method="post"><button type="submit" class="link-primary" style="background-color: transparent; text-decoration:underline; border:none;">Aceitar</button></form>
                <form action="/perfil/administrador/deletar/{{this.id}}" method="post"><button type="submit" class="link-primary" style="background-color: transparent; text-decoration:underline; border:none;">Deletar</button></form>
                </td>
            {{/each}}
            </tr>
        </tbody> 
    </table>
</div>

